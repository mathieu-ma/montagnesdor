<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="fr.mch.mdo.restaurant.dao.beans.CategoryLanguage" table="t_category_language">
		<id name="id" column="ctl_id" type="long">
			<generator class="increment" />
		</id>
		<property name="deleted" column="ctl_deleted"/>

		<many-to-one name="locale" column="loc_id" class="fr.mch.mdo.restaurant.dao.beans.Locale"/>
		<many-to-one name="category" column="cat_id" class="fr.mch.mdo.restaurant.dao.beans.Category"/>

		<property name="label" column="ctl_label" type="string"/>         
	</class>

</hibernate-mapping>

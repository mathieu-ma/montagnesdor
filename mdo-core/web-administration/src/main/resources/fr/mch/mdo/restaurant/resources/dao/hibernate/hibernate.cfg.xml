        <mapping resource="fr/mch/mdo/restaurant/resources/dao/hibernate/UserRestaurantProperties.hbm.xml"/>
		<mapping resource="fr/mch/mdo/restaurant/resources/dao/hibernate/UserLocale.hbm.xml"/>

        <mapping resource="fr/mch/mdo/restaurant/resources/dao/hibernate/UserAuthenticationJaas.hbm.xml"/>

        <mapping resource="fr/mch/mdo/restaurant/resources/dao/hibernate/ProductPart.hbm.xml"/>

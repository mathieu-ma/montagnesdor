<?xml version="1.0" encoding="UTF-8"?>
<project name="12-mdo-aop" basedir="." default="mvn2-install">
	<description>
		This ant build file is only used for running ANT into eclipse
		without the need of command line
    </description>

	<target name="mvn2-purge-local-repository">
		<ant antfile="../build.xml" target="mvn2-purge-local-repository" />
	</target>

	<target name="mvn2-clean">
		<ant antfile="../build.xml" target="mvn2-clean" />
	</target>

	<target name="mvn2-install">
		<ant antfile="../build.xml" target="mvn2-install" />
	</target>

	<target name="mvn2-compile">
		<ant antfile="../build.xml" target="mvn2-compile" />
	</target>

	<target name="mvn2-unpack-shared-resources">
		<ant antfile="../build.xml" target="mvn2-unpack-shared-resources" />
	</target>

	<target name="mvn2-eclipse-clean">
		<ant antfile="../build.xml" target="mvn2-eclipse-clean" />
	</target>

	<target name="mvn2-eclipse-webapp">
		<ant antfile="../build.xml" target="mvn2-eclipse-webapp" />
	</target>

	<target name="mvn2-war-exploded">
		<ant antfile="../build.xml" target="mvn2-war-exploded" />
		<echo>Copy all war lib from target folder to source folder, this action will be restore in install goal</echo>
		<copy todir="src/main/webapp/WEB-INF/lib" verbose="true">
			<fileset dir="target/mdo-web-administration/WEB-INF/lib"/>
		</copy>
	</target>

	<target name="mvn2-effective-pom">
		<ant antfile="../build.xml" target="mvn2-effective-pom" />
	</target>

	<target name="mvn2-tree">
		<ant antfile="../build.xml" target="mvn2-tree" />
	</target>
	
	<target name="copy-business-tests">
		<copy todir="./src/test/java" overwrite="true" verbose="true">
		  	<fileset dir="../business/src/test/java">
		        <include name="**/*.java" />
			</fileset>
		</copy>
		<copy todir="./src/test/resources" overwrite="true" verbose="true">
		  	<fileset dir="../business/src/test/resources">
		        <include name="**/*.xml" />
		        <include name="**/*.properties" />
			    <include name="**/*.sql" />
			    <include name="**/*.ods" />
			</fileset>
		</copy>
	</target>
</project>
